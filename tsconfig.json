{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react-native",
        "lib": [
            "ES2022"
        ],
        "types": [
            "react-native",
            "jest",
            "node"
        ],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "forceConsistentCasingInFileNames": false,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@/components/*": [
                "src/components/*"
            ],
            "@/utils/*": [
                "src/utils/*"
            ],
            "@/assets/*": [
                "src/assets/*"
            ],
            "@/screens/*": [
                "src/screens/*"
            ],
            "@/service/*": [
                "src/service/*"
            ],
            "@/hooks/*": [
                "src/hooks/*"
            ],
            "@/types/*": [
                "src/types/*"
            ],
            "@/store/*": [
                "src/store/*"
            ],
            "@/language/*": [
                "src/language/*"
            ]
        }
    },
    "include": [
        "./src/*",
        "./scripts/*"
    ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "./src/assets/images/*"
    ]
}