{
    "extends": "@react-native/typescript-config/tsconfig.json",
    "compilerOptions": {
        "skipLibCheck": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "jsx": "react-native",
        "module": "CommonJS",
        "lib": [
            "ES2023"
        ],
        "types": [
            "react-native",
            "jest",
            "node"
        ],
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": "./",
        "forceConsistentCasingInFileNames": false
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "./src/assets/images/*"
    ]
}